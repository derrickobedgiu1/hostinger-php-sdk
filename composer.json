{
    "name": "derrickob/hostinger-php-sdk",
    "description": "A PHP SDK for interacting with the Hostinger API",
    "type": "library",
    "homepage": "https://github.com/derrickobedgiu1/hostinger-php-sdk",
    "keywords": [
        "hostinger",
        "hostinger-php",
        "hostinger-client",
        "hostinger-vps",
        "hostinger-api",
        "hostinger-sdk",
        "api",
        "sdk",
        "client"
    ],
    "authors": [
        {
            "name": "Derrick Obedgiu",
            "email": "derrickobedgiu@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.9",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "friendsofphp/php-cs-fixer": "^3.75",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^3.8",
        "php-coveralls/php-coveralls": "^0.1.0",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "DerrickOb\\HostingerApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DerrickOb\\HostingerApi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "stan": "phpstan analyze",
        "cs": "php-cs-fixer fix --allow-risky=yes --dry-run --diff",
        "rector": "rector process --dry-run",
        "cs:fix": "php-cs-fixer fix --allow-risky=yes",
        "rector:fix": "rector process",
        "check-all": [
            "@cs",
            "@test",
            "@rector",
            "@stan"
        ],
        "fix-all": [
            "@cs:fix",
            "@rector:fix"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable"
}
